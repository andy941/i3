# Alacritty terminal colorschemes configuration
set $color_dir $HOME/.config/alacritty/alacritty-theme/themes
set $light_color gruvbox_light.yaml
set $dark_color gruvbox_material.yml

# Toggle between light and dark colorscheme
bindsym $mod+Shift+n exec alacritty-colorscheme -C $color_dir toggle $light_color $dark_color

# Toggle between colorschemes and notify the name
bindsym $mod+Shift+a exec alacritty-colorscheme -C $color_dir toggle && \
		notify-send -t 5000 -u low $(alacritty-colorscheme -C .config/alacritty/alacritty-theme/themes/ status )


# Passmenu keybinding
bindsym $mod+p exec passmenu -m primary

# unclutter helps hiding the mouse pointer after x seconds
exec_always --no-startup-id killall unclutter
exec_always --no-startup-id sleep 3; unclutter --timeout 3 & #--ignore-scrolling

# Remap keys (mainly CapsLock -> Esc)
exec_always --no-startup-id xmodmap ~/.Xmodmap

# Screenshot mode
bindsym Print mode "$screenshot"
set $screenshot Screenshot: YANK = [d]esktop [w]indow [s]election :: SAVE = [Shift+d]esktop [Shift+w]indow [Shift+s]election
mode "$screenshot" {
		bindsym d exec --no-startup-id "i3-scrot -dc"
		bindsym w exec --no-startup-id "i3-scrot -wc"
		bindsym --release s exec --no-startup-id "i3-scrot -sc"
		bindsym Shift+D exec --no-startup-id "i3-scrot -d"
		bindsym Shift+W exec --no-startup-id "i3-scrot -w"
		bindsym --release Shift+S exec --no-startup-id "i3-scrot -s"
		bindsym Escape mode "default"
		bindsym Return mode "default"
}
